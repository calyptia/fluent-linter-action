{
  "name": "fluent-linter-action",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:calyptia/fluent-linter-action.git"
  },
  "license": "Apache-2.0",
  "version": "0.0.12",
  "description": "Linter action for Fluentd and Fluent-bit configuration",
  "main": "dist/index.js",
  "scripts": {
    "precommit": "lint-staged",
    "test": "jest",
    "problem-matcher:build": "cp problem-matcher.json dist/",
    "build": "esbuild --bundle ./index.ts --platform=node --target=node16 --main-fields=main --outdir=dist && pretty-quick dist/index.js",
    "lint": "eslint src/* --ext .ts"
  },
  "engines": {
    "node": ">16.0.0"
  },
  "keywords": [
    "linter",
    "action",
    "fluent-bit"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*": [
      "pretty-quick --staged"
    ],
    "*.ts": [
      "eslint --fix",
      "bash -c \"npm run build\"",
      "bash -c \"npm run problem-matcher:build\"",
      "pretty-quick dist/index.js",
      "git add ."
    ]
  },
  "prettier": {
    "singleQuote": true,
    "semi": true,
    "printWidth": 120
  },
  "eslintConfig": {
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "rules": {
      "quotes": [
        2,
        "single",
        "avoid-escape"
      ],
      "no-debugger": "error",
      "no-process-env": "off",
      "import/prefer-default-export": "off",
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "vars": "all",
          "args": "after-used",
          "ignoreRestSiblings": true
        }
      ],
      "new-cap": [
        "error",
        {
          "capIsNewExceptions": [
            "Injectable",
            "Inject"
          ]
        }
      ],
      "prefer-destructuring": [
        "error",
        {
          "VariableDeclarator": {
            "array": false,
            "object": true
          },
          "AssignmentExpression": {
            "array": true,
            "object": false
          }
        },
        {
          "enforceForRenamedProperties": false
        }
      ]
    }
  },
  "author": "Gago <xeroice@gmail.com>",
  "dependencies": {
    "@actions/core": "^1.6.0",
    "@actions/glob": "^0.2.0",
    "@calyptia/fluent-bit-config-parser": "^1.0.0",
    "node-fetch": "^2.6.6",
    "table": "^6.8.0"
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@types/node": "^16",
    "@typescript-eslint/eslint-plugin": "5.9.1",
    "@typescript-eslint/parser": "5.9.1",
    "ajv-keywords": "5.1.0",
    "auto-changelog": "2.3.0",
    "esbuild": "0.14.11",
    "eslint": "8.6.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "4.0.0",
    "husky": "4.3.8",
    "jest": "^27.4.7",
    "jest-serializer-path": "^0.1.15",
    "lint-staged": "12.1.7",
    "nock": "^13.2.2",
    "prettier": "2.5.1",
    "prettier-eslint": "^13.0.0",
    "prettier-eslint-cli": "^5.0.1",
    "pretty-quick": "3.1.2",
    "ts-jest": "^27.1.2",
    "ts-node": "9.1.1",
    "tslib": "2.3.1",
    "typescript": "4.5.4"
  },
  "bugs": {
    "url": "https://github.com/calyptia/fluent-linter-action/issues"
  },
  "homepage": "https://github.com/calyptia/fluent-linter-action#readme"
}
